import numpy as np
import matplotlib.pyplot as plt

# -----------------------------------
# Function, gradient, Hessian
# -----------------------------------

# Example function: a simple quadratic bowl + cross-term
def f(x):
    x1, x2 = x[0], x[1]
    return 3*x1**2 + x2**2 + x1*x2 - 4*x1 - 2*x2 + 10

def grad(x):
    x1, x2 = x
    df_dx1 = 6*x1 + x2 - 4
    df_dx2 = 2*x2 + x1 - 2
    return np.array([df_dx1, df_dx2])

def hessian(x):
    return np.array([
        [6, 1],
        [1, 2]
    ])

# -----------------------------------
# Newton's Method
# -----------------------------------
def newton_method(x0, max_iter=10):
    x = x0
    path = [x.copy()]

    for _ in range(max_iter):
        g = grad(x)
        H = hessian(x)

        try:
            step = np.linalg.solve(H, g)
        except np.linalg.LinAlgError:
            print("Hessian is singular. Stopping.")
            break
        
        x = x - step
        path.append(x.copy())

    return np.array(path)

# Initial guess
x0 = np.array([3.0, -4.0])
path = newton_method(x0)

# -----------------------------------
# Contour Plot with Path Tracing
# -----------------------------------

# Grid for contour
x1_vals = np.linspace(-6, 6, 400)
x2_vals = np.linspace(-6, 6, 400)
X1, X2 = np.meshgrid(x1_vals, x2_vals)

Z = 3*X1**2 + X2**2 + X1*X2 - 4*X1 - 2*X2 + 10

plt.figure(figsize=(8, 6))
plt.contour(X1, X2, Z, levels=30)

# Path trace
path = np.array(path)
plt.plot(path[:,0], path[:,1], marker="o")

# Arrow directions
for i in range(len(path)-1):
    plt.arrow(path[i,0], path[i,1],
              path[i+1,0] - path[i,0],
              path[i+1,1] - path[i,1],
              head_width=0.12, length_includes_head=True)

plt.title("Newton's Method Path on Contour Plot")
plt.xlabel("x1")
plt.ylabel("x2")
plt.grid(True)
plt.show()

